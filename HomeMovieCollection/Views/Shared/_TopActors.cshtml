@model IList<HomeMovieCollection.Core.Objects.Actor>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Top 3 Actors</h3>
    </div>
    <div class="panel-body">
        @if (Model.Count > 0)
        {
            <ul class="list-group">
                @foreach (var actor in Model.Take(3).OrderByDescending(a => a.Movies.Count))
                {
                    <li class="list-group-item">@Html.ActorLink(actor) <span class="badge">@actor.Movies.Count() Movies</span></li>
                }
            </ul>
        }
        else
        {
            <p>No Genres found</p>
        }
    </div>
</div>

