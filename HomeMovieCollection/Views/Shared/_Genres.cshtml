@model IList<HomeMovieCollection.Core.Objects.Genre>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Top Genres</h3>
    </div>
    <div class="panel-body">
        @if (Model.Count > 0)
        {
            <ul class="list-group">
                @foreach (var genre in Model.OrderByDescending(g => g.Movies.Count()))
                {
                    <li class="list-group-item">@Html.GenreLink(genre) <span class="badge">@genre.Movies.Count()  Movies</span></li>
                }
            </ul>
        }
        else
        {
            <p>No Genres found</p>
        }
    </div>
</div>
