@model HomeMovieCollection.Models.ListViewModel

<div id="content">

    <h1>@ViewBag.Title</h1>

    @if (Model.Movies.Count > 0)
    {
        <table class="table table-striped">
            <tr>
              
                <th>Title</th>
                <th>Director</th>
                <th>Release Date</th>
                <th>Runtime</th>
                <th>Genre</th>
                <th>Actors</th>
            </tr>
            @foreach (var movie in Model.Movies)
            {
                @Html.Partial("_MovieTemplate", movie)
            }
        </table>
    }
    else
    {
        <p>No movies found!</p>
    }

    @Html.Partial("_Pager", Model)
</div>
